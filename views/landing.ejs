</head>
<body>

<!-- Add Flash Messages to langing page -->
<div class="container landing-flash-messages">
    <!-- Display error flash messages (since header partial wasn't included) -->
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    
    <!-- Disaply success flash messages (since header partial wasn't included) -->
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>
</div> 



<h1>COLLECTORS</h1>

<% if (!currentUser) { %>
    <a href="/login" class="btn btn-default">Login</a>
    <a href="/register" class="btn btn-default">Register</a>
    <a href="/users" class="btn btn-default">All Users</a>
<% } else { %>
    <a href="/games" class="btn btn-default">My Collection</a>
    <a href="/users" class="btn btn-default">All Users</a>
<% } %>

<div>
    <!-- target="_blank" opens the link in a new tab -->
    <a class="btn btn-default" href="https://github.com/CurtisForristal/collector" target="_blank">
        <i class="fa fa-github"></i> GitHub Page
    </a>
</div>


</body>
</html>