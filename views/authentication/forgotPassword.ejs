<!-- VIEW: Forgot Password ===================== -->
<!-- Disaplys a form to request a password reset -->
<!-- =========================================== -->

<!-- INCLUDE HEADER -->
<% include ../partials/header %>


<!-- Form to reset password -->
<div class="container formContainer">
    <h1 class="formHeader display-3 standardHeader">FORGOT PASSWORD</h1>

    <form action="/forgotpassword" method="POST">
        <div class='form-group'>
            <label class="grayColor" for="email">Email</label>
            <input class="form-control" type="email" name="email" autofocus>
        </div>

        <div class='form-group'>
           <input class="btn btn-outline-secondary" type="submit" value="Reset Password"></input>
        </div>
    </form>
</div>


<!-- INCLUDE FOOTER -->
<% include ../partials/footer %>